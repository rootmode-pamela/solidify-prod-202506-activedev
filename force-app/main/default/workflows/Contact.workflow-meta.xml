<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>First_Payment_Reminder</fullName>
        <description>First Payment Reminder</description>
        <protected>false</protected>
        <recipients>
            <field>Email</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/First_Payment_Reminder</template>
    </alerts>
    <fieldUpdates>
        <fullName>Home_Phone_to_Mobile</fullName>
        <description>When home phone is blank, copy over value from mobile phone</description>
        <field>HomePhone</field>
        <formula>MobilePhone</formula>
        <name>Home Phone to Mobile</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>UpdateCurrentBalance</fullName>
        <field>Current_Balance__c</field>
        <formula>SelectedProperty__r.Scheduled_Balance_of_Most_Recent_Closing__c</formula>
        <name>Update Current Balance</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Current_Payment</fullName>
        <field>Current_Payment__c</field>
        <formula>SelectedProperty__r.PaymentAmount__c</formula>
        <name>Update Current Payment</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Current_Rate</fullName>
        <field>Current_Rate__c</field>
        <formula>SelectedProperty__r.Rate_of_Most_Recent_Closing__c</formula>
        <name>Update Current Rate</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Contact Property Fields update</fullName>
        <actions>
            <name>UpdateCurrentBalance</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Current_Payment</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Current_Rate</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>SelectedProperty__c &lt;&gt; NULL</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Home Phone Empty</fullName>
        <actions>
            <name>Home_Phone_to_Mobile</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Contact.HomePhone</field>
            <operation>equals</operation>
            <value></value>
        </criteriaItems>
        <description>If home phone is empty, copy mobile phone</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Missing Present Address</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Contact.Present_Address__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <tasks>
        <fullName>Birthday_Alert</fullName>
        <assignedTo>dusty@solidify.com</assignedTo>
        <assignedToType>user</assignedToType>
        <dueDateOffset>0</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <offsetFromField>Contact.Birthdate</offsetFromField>
        <priority>High</priority>
        <protected>false</protected>
        <status>Open</status>
        <subject>Birthday Alert</subject>
    </tasks>
</Workflow>
