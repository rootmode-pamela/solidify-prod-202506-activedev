                    <lightning:inputField aura:id="CBInc"  fieldName = "CoBorrower_Est_Income__c"  onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                   
                </div>  -->
                       
                
            </div>
            
           <div class="slds-col  slds-size_1-of-4">
               
               <h3 class="slds-section__title slds-theme_shade">
    				<span class="slds-truncate slds-p-horizontal_small" title="Misc"><b>Loan Details</b></span>
  				</h3>
                <div class="slds-p-left_small">
                    <lightning:inputField aura:id="Purpose" fieldName="Purpose__c" onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                    <lightning:inputField aura:id="Occupancy" fieldName="Occupancy__c" onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                    <lightning:inputField aura:id="Current Program" fieldName="Current_Program__c" onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    <lightning:inputField aura:id="Current Balance" fieldName="Current_Balance__c" onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    <lightning:inputField aura:id="Current Rate" fieldName="Current_Rate__c" onchange="{!c.highlightChangedField}" variant="label-inline"/> 
                    <lightning:inputField aura:id="Current Payment" fieldName="Current_Payment__c" onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    <lightning:inputField aura:id="QualFico" fieldName="Qualifying_Fico__c" onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    <lightning:inputField aura:id="FirstTimeHomebuyer" fieldName="First_Time_Homebuyer__c" onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    <lightning:inputField aura:id="Veteran2" fieldName="Veteran__c" onchange="{!c.highlightChangedField}" variant="label-inline"/>
     				
                 </div>

                 <div class="slds-grid slds-gutters slds-p-bottom_x-large slds-align_absolute-center" >
        		<div>
            		<lightning:button disabled="true" aura:id="submitButton" class="slds-m-top_small" type="submit" label="Submit" />
        		</div>
        </div>
               
               
             </div>               
             
              <div class="slds-col  slds-size_1-of-4">
 
            <h3 class="slds-section__title slds-theme_shade">
    				<span class="slds-truncate slds-p-horizontal_small" title="Address"><b>Subject Property</b></span>
  				</h3>
                  
                  <div class="slds-p-left_small">
                    
                   <lightning:input label="Address Search" 
                        name="location2"
                        aura:id="location2" 
                        value="{!v.location2}"
                        onchange="{!c.getAddress2}" />
                   
                   <aura:if isTrue="{!v.predictions2.length > 0}">		 
 						<ul class="city_predictions">
						<aura:iteration items="{!v.predictions2}" var="prediction2">
							<li class="slds-listbox__item">
								<a onclick="{!c.getAddressDetails2}" data-placeid="{!prediction2.place_id}">{!prediction2.description}</a>
							</li>
						</aura:iteration>
						</ul> 	 
					</aura:if>
                 
                      <label for="SP_Street" class="slds-form-element__label slds-p-top_small">Street</label> 
                      <lightning:inputField aura:id="SP_Street" variant="label-hidden" fieldName="Subject_Property_Street__c"  onchange="{!c.highlightChangedField}"/>
                      <div class="slds-grid slds-gutters_direct-xxx-small slds-p-top_x-small">
                          <div class="slds-col  slds-size_5-of-12 ">
                              <label for="SP_City" class="slds-form-element__label">City</label>
                              <lightning:inputField aura:id="SP_City"  variant="label-hidden" fieldName="Subject_Property_City__c"  onchange="{!c.highlightChangedField}"/>
                          </div>
                          <div class="slds-col  slds-size_3-of-12">
                              <label for="SP_State" class="slds-form-element__label">State</label>
                              <lightning:inputField aura:id="SP_State" variant="label-hidden" fieldName="Subject_Property_State__c"  onchange="{!c.highlightChangedField}"/> </div>
                          <div class="slds-col  slds-size_4-of-12">
                              <label for="SP_Zip" class="slds-form-element__label">Zip</label>
                              <lightning:inputField aura:id="SP_Zip"  variant="label-hidden" fieldName="Subject_Property_Zip__c"  onchange="{!c.highlightChangedField}"/> </div>
                      </div>
                 
                      
                  </div>
               
                  <div class="slds-section slds-is-open slds-p-bottom_xxx-small">
  				
						<div class="slds-p-left_small">
                <lightning:inputField aura:id="SPType" fieldName="Subject_Property_Type__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                <lightning:inputField aura:id="SPUnits" fieldName="Number_of_Units__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>

    			<lightning:inputField aura:id="SPEstVal" fieldName="Estimated_Value__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    </div>
            	</div>               
               
  				
                  
                                                  <div class="slds-p-top_small">
                            <h3 class="slds-section__title slds-theme_shade">
    				<span class="slds-truncate slds-p-horizontal_small" title="Rating"><b>Source</b></span>
  				</h3>
            
               <div >
                    <lightning:inputField aura:id="LeadSource" fieldName="LeadSource"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    <lightning:inputField aura:id="ReferredBy" fieldName="Referred_By__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                   
                
            </div>             </div>
                  
                  
             </div>
             
             
             

             
        </div>

        
    </lightning:recordEditForm>

</aura:component>