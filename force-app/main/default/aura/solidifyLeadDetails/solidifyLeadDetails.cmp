<aura:component controller = "solidifyGoogleMaps" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="LeadSimpleRecord" type="Object" />
    <aura:attribute name="LeadRecord" type="Object" />
    <aura:attribute name="recordError" type="String" />
    <aura:attribute name="location" type="string" default=""/>
	<aura:attribute name="predictions" type="List" default="[]"/>
    <aura:attribute name="location2" type="string" default=""/>
	<aura:attribute name="predictions2" type="List" default="[]"/>
    <aura:attribute name="dirtyFields" type="List"/>

    <force:recordData aura:id="leadRecord"
                  mode="EDIT"
                  recordId="{!v.recordId}"
                  targetRecord="{!v.LeadRecord}"
                  targetFields="{!v.LeadSimpleRecord}"
                  targetError="{!v.recordError}"
                  fields="Id,Name,FirstName,LastName,Nickname__c,Type__c,Role__c,Rating,Branch__c,LeadSource,
                          Referred_By__c,Ad_Description__c,Ad_Consented__c,Loan_Originator_User__c, OwnerId, 
                          Archived_Reason__c,Home_Phone__c,Business_Phone__c,MobilePhone,Business_Phone__c,Email,Email_2__c,
                          Company,Title,Income_Sources__c,Estimated_Income__c,Impounds__c,Fico__c,Self_Reported_Credit__c,
                          Purpose__c,Occupancy__c,Subject_Property_Type__c,Number_of_Units__c,
                          Rate_Quoted__c,Address,Street,City,State,PostalCode,CoBorrower_FirstName__c,CoBorrower_LastName__c,
                          CoBorrower_Veteran__c,CoBorrower_Income_Sources__c,CoBorrower_Est_Income__c,
                          CoBorrower_Nickname__c,CoBorrower_Mobile__c,Checking_Assets__c,Savings_Assets__c,Retirement_Assets__c,Other_Monthly_Payments__c,
                          CoBorrower_Home_Phone__c,CoBorrower_Business_Phone__c,Subject_Property_State__c,Subject_Property_City__c,
                          Subject_Property_Street__c,Subject_Property_Zip__c,Subject_Property_County__c"
                  recordUpdated="{!c.recordUpdate}"
                     />

     
    <lightning:recordEditForm aura:id="leadDetailForm" onsuccess="{!c.handleSuccess}" recordId="{!v.recordId}" objectApiName="Lead" density='compact'>
        <lightning:messages />
		<aura:if isTrue="{!not(empty(v.recordError))}">
        	<div class="recordError">
            	{!v.recordError}</div>
    	</aura:if>
            
       
       
           
         <div class="slds-grid slds-gutters">
            <div class="slds-col  slds-size_1-of-4">
                
                <div class="slds-p-left_small">
                    <h3 class="slds-section__title slds-theme_shade">
    				<span class="slds-truncate slds-p-horizontal_small" title="Contact"><b>Borrower</b></span>
  				</h3>
                    <lightning:inputField aura:id="fname" fieldName = "FirstName"  onchange="{!c.highlightChangedField}" />
                    <lightning:inputField aura:id="lname" fieldName = "LastName"  onchange="{!c.highlightChangedField}"  />
                    <lightning:inputField aura:id="nname" fieldName = "Nickname__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/> 
                    <lightning:inputField aura:id="homephone" fieldName = "Home_Phone__c"  onchange="{!c.highlightChangedField}" variant="label-inline" />
                    <lightning:inputField aura:id="businessphone" fieldName = "Business_Phone__c"  onchange="{!c.highlightChangedField}" variant="label-inline" />
                    <lightning:inputField aura:id="mobilephone" fieldName = "MobilePhone"  onchange="{!c.highlightChangedField}" variant="label-inline" />
                    <lightning:inputField aura:id="email" fieldName = "Email"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    <lightning:inputField aura:id="bpmoc" fieldName = "Borrower_PMOC__c"  onchange="{!c.highlightChangedField}" variant="label-inline" />
                     <lightning:inputField aura:id="employer" fieldName = "Employer__c"  onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                     <lightning:inputField aura:id="incsources" fieldName = "Income_Sources__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    <lightning:inputField aura:id="estinc" fieldName = "Estimated_Income__c"  onchange="{!c.highlightChangedField}" variant="label-inline" />

                </div>
             
              <!--      <div class="slds-p-top_small slds-p-left_small">
                <h3 class="slds-section__title slds-theme_default">
                <span class="slds-truncate slds-p-horizontal_small" title="Borrower Details"><b>Borrower Details</b></span>
                </h3>
                       
                <div >   
                    <lightning:inputField fieldName = "Income_Sources__c"  onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                    <lightning:inputField fieldName = "Estimated_Income__c"  onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                    <lightning:inputField fieldName = "Veteran__c"  onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                </div>
                
            </div> -->
             </div>
            
   		    <div class="slds-col  slds-size_1-of-4">
            
               <div class="slds-p-left_small ">
                    <h3 class="slds-section__title slds-theme_shade">
    				<span class="slds-truncate slds-p-horizontal_small" title="Contact"><b>Co-Borrower</b></span>
  				</h3>
                   
                   <lightning:inputField aura:id="CBFirst"  fieldName = "CoBorrower_FirstName__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
				   <lightning:inputField aura:id="CBLast"  fieldName = "CoBorrower_LastName__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                   <lightning:inputfield aura:id="CBnick" fieldName="CoBorrower_Nickname__c" variant="label-inline"/>
                   <lightning:inputField aura:id="CBHome" fieldName="CoBorrower_Home_Phone__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                   <lightning:inputField aura:id="CBBusiness" fieldName="CoBorrower_Business_Phone__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                   <lightning:inputField aura:id="CBMobile" fieldName="CoBorrower_Mobile__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                   <lightning:inputField aura:id="email2" fieldName = "Email_2__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                   <lightning:inputField aura:id="CBPMOC" fieldName = "CoBorrower_PMOC__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                   <lightning:inputField aura:id="CBEmployer" fieldName = "CoBorrower_Employer__c"  onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                    <lightning:inputField aura:id="CBIncSource"  fieldName = "CoBorrower_Income_Sources__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    <lightning:inputField aura:id="CBInc"  fieldName = "CoBorrower_Est_Income__c"  onchange="{!c.highlightChangedField}" variant="label-inline"/>
                    
                </div>
                
               <!-- <div class="slds-p-top_small slds-p-left_small">
                	<h3 class="slds-section__title slds-theme_alt-inverse">
                	<span class="slds-truncate slds-p-horizontal_small" title="Borrower Details" variant="label-stacked"><b>Co-Borrower Details</b></span>
                </h3>
                 	<lightning:inputField aura:id="CBEmployer" fieldName = "CoBorrower_Employer__c"  onchange="{!c.highlightChangedField}" variant="label-stacked"/>
