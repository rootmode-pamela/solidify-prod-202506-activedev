<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="Lead" type="Object" />
    <aura:attribute name="recordError" type="String" />
    <force:recordData aura:id="leadRecord"
                  mode="EDIT"
                  recordId="{!v.recordId}"
                  targetFields="{!v.Lead}"
                  targetError="{!v.recordError}"
                  fields="Id,Name,FirstName,LastName,Nickname__c,Type__c,Role__c,Rating,Branch__c,LeadSource,
                          Referred_By__c,Ad_Description__c,Ad_Consented__c,Loan_Originator_User__c,OwnerId,
                          Home_Phone__c,Business_Phone__c,MobilePhone,Business_Phone__c,Email,Email_2__c,
                          Company,Title,Income_Sources__c,Estimated_Income__c,Impounds__c,Fico__c,Self_Reported_Credit__c,
                          Purpose__c,Occupancy__c,Subject_Property_Type__c,Number_of_Units__c,
                          Rate_Quoted__c"
                  recordUpdated="{!c.recordUpdate}"
                      />
    
    
     
    <lightning:recordEditForm aura:id="leadLoanScenarioForm" recordId="{!v.recordId}" objectApiName="Lead" density="compact" >
        <lightning:messages />
		<aura:if isTrue="{!not(empty(v.recordError))}">
        	<div class="recordError">
            	{!v.recordError}</div>
    	</aura:if>
            
             
       
         <div class="slds-grid slds-gutters">
            <div class="slds-col  slds-size_1-of-4">
                <div class="slds-section slds-is-open">
  				<h3 class="slds-section__title slds-theme_shade">
    				<span class="slds-truncate slds-p-horizontal_small" title="Form Data"><b>CURRENT LOAN</b></span>
  				</h3>
                <div class="slds-p-left_small">
                <lightning:inputField fieldName="Occupancy__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
        		<lightning:inputField fieldName="Subject_Property_Type__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>  
                <lightning:inputField fieldName="Current_Program__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Current_Term__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/> 
                <lightning:inputField fieldName="Original_Loan_Amount__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="First_Payment_Date__c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Number_of_Payments_Made__c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Estimated_Value__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>    
                <lightning:inputField fieldName="Current_Balance__c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Current_Rate__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Current_Payment__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                    
            </div>

                </div>
             </div>
            <div class="slds-col slds-size_1-of-4">
                <div class="slds-section slds-is-open">
  				<h3 class="slds-section__title slds-theme_shade">
                    <span class="slds-truncate slds-p-horizontal_small" title="Data"><b>SCENARIO 1</b></span>
  				</h3>
<div class="slds-p-left_small">
                <lightning:inputField fieldName="Purpose__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
   			    <lightning:inputField fieldName="Loan_Program__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Term_Due__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>	      
  			    <lightning:inputField fieldName="First_Loan_Amount_Scenario_1__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="Second_Loan_Amount__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
     			<lightning:inputField fieldName="LTV_Scenario_1__c" onchange="{!c.handleSaveRecord}" variant="label-stacked" />
    			<lightning:inputField fieldName="CLTV_Scenario_1__c" onchange="{!c.handleSaveRecord}" variant="label-stacked" />               
   				<lightning:inputField fieldName="Rate_Scenario_1__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>	
   				<lightning:inputField fieldName="Monthly_Payment__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>	
        		<lightning:inputField fieldName="Monthly_Payment_Savings__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="Daily_Interest_Savings__c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="On_Pace_Savings_Scenario_1__c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Maturity_Reduction_Scenario_1__c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="Lifetime_Savings_Scenario_1__c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>

                    </div>
            	</div>
            </div>
            <div class="slds-col slds-size_1-of-4"> 
                <div class="slds-section slds-is-open">
  				<h3 class="slds-section__title slds-theme_shade">
    				<span class="slds-truncate slds-p-horizontal_small" title="Specifics"><b>SCENARIO 2</b></span>
  				</h3>
<div class="slds-p-left_small">
                <lightning:inputField fieldName="Purpose_Scenario_2__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
   			    <lightning:inputField fieldName="Loan_Program_Scenario_2__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Term_Due_Scenario_2__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>	      
  			    <lightning:inputField fieldName="First_Loan_Amount_Scenario_2__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="Second_Loan_Amount_Scenario_2__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
     			<lightning:inputField fieldName="LTV_Scenario_2__c" onchange="{!c.handleSaveRecord}" variant="label-stacked" />
    			<lightning:inputField fieldName="CLTV_Scenario_2__c" onchange="{!c.handleSaveRecord}" variant="label-stacked" />               
   				<lightning:inputField fieldName="Rate_Scenario_2__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>	
   				<lightning:inputField fieldName="Monthly_Payment_Scenario_2__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>	
        		<lightning:inputField fieldName="Monthly_Payment_Savings_Scenario_2__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="Daily_Interest_Savings_Scenario_2__c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Timeline_c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="Timeline_c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>

                    </div>
            </div>
             </div>
            <div class="slds-col slds-size_1-of-4">
                <div class="slds-section slds-is-open">
  				<h3 class="slds-section__title slds-theme_shade">
    				<span class="slds-truncate slds-p-horizontal_small" title="Misc"><b>SCENARIO 3</b></span>
  				</h3>
                <div class="slds-p-left_small">
                <lightning:inputField fieldName="Purpose_Scenario_3__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
   			    <lightning:inputField fieldName="Loan_Program_Scenario_3__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Term_Due_Scenario_3__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>	      
  			    <lightning:inputField fieldName="First_Loan_Amount_Scenario_3__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="Second_Loan_Amount_Scenario_3__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
     			<lightning:inputField fieldName="LTV_Scenario_3__c" onchange="{!c.handleSaveRecord}" variant="label-stacked" />
    			<lightning:inputField fieldName="CLTV_Scenario_3__c" onchange="{!c.handleSaveRecord}" variant="label-stacked" />               
   				<lightning:inputField fieldName="Rate_Scenario_3__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>	
   				<lightning:inputField fieldName="Monthly_Payment_Scenario_3__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>	
        		<lightning:inputField fieldName="Monthly_Payment_Savings_Scenario_3__c"  onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="Daily_Interest_Savings_Scenario_3__c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
                <lightning:inputField fieldName="Timeline_c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
    			<lightning:inputField fieldName="Timeline_c" onchange="{!c.handleSaveRecord}" variant="label-stacked"/>
     
                 </div>
            </div>  
             </div>
        </div>
       
        
    </lightning:recordEditForm>

</aura:component>