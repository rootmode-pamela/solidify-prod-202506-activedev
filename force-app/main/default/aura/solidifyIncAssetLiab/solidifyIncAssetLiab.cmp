<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
	<aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="Opportunity" type="Opportunity"
               default="{ 'sobjectType': 'Opportunity' }"/>
    <force:recordData aura:id="loanRecord"
                  recordId="{!v.recordId}"
                  targetFields="{!v.Opportunity}"
                  fields="Id, Inc_Borrower_Base__c, Inc_CoBorrower_Base__c, Inc_Total_Base__c, 
                          Inc_Borrower_Overtime__c, Inc_CoBorrower_Overtime__c, Inc_Total_Overtime__c, 
                          Inc_Borrower_Bonuses__c, Inc_CoBorrower_Bonuses__c, Inc_Total_Bonuses__c, 
                          Inc_Borrower_Commission__c, Inc_CoBorrower_Commission__c, Inc_Total_Commission__c, 
                          Inc_Borrower_DIvInt__c, Inc_CoBorrower_DIvInt__c, Inc_Total_DivInt__c,
                          Income_Subject_Property_Net__c, 
                          Inc_Borrower_NetRent__c, Inc_CoBorrower_NetRent__c, Inc_Total_NetRent__c, 
                          Inc_Borrower_Other__c, Inc_CoBorrower_Other__c, Inc_Total_Other__c, 
                          Inc_Borrower_Sub_Other__c,Inc_CoBorrower_Sub_Other__c, Inc_Total_Sub_Other__c, 
                          Inc_Borrower_Total__c, Inc_CoBorrower_Total__c, Inc_Grand_Total__c,
                          IncOth1_BC__c, IncOth1_Description__c, IncOth1_Amount__c, 
                          IncOth2_BC__c, IncOth2_Description__c, IncOth2_Amount__c,
                          IncOth3_BC__c, IncOth3_Description__c, IncOth3_Amount__c,
                          Exp_Primary_Housing_Total__c, Exp_Subject_Prop_Net_Neg__c, Exp_All_Oth_Prop__c, 
                          Exp_All_Other_Payments__c, Total_Liabilities__c,Exp_Rent__c, Exp_1Mtg_Present__c, 
                          Exp_1Mtg_Proposed__c, Exp_OthFin_Present__c, Exp_OthFin_Proposed__c,
                          Exp_HazIns_Present__c, Exp_HazIns_Proposed__c, Exp_Taxes_Present__c, 
                          Exp_Taxes_Proposed__c, Exp_MtgIns_Present__c, Exp_MtgIns_Proposed__c, 
                          Exp_HOA_Present__c, Exp_HOA_Proposed__c, Exp_Other_Present__c, 
                          Exp_Other_Present__c,Exp_Total_Present__c, Exp_Total_Proposed__c, 
                          Account1_Name__c, Account1_Number__c, Account1_Type__c, Account1_Amount__c, Account2_Name__c, 
                          Account2_Number__c, Account2_Type__c, Account2_Amount__c,Account3_Name__c, Account3_Number__c, 
                          Account3_Type__c, Account3_Amount__c,Account4_Name__c, Account4_Number__c,Account4_Type__c, 
                          Account4_Amount__c,Account5_Name__c, Account5_Number__c,Account5_Type__c, 
                          Account5_Amount__c, Stocks1_Name__c, Stocks1_Shares__c, Stocks1_Amount__c,Stocks2_Name__c, Stocks2_Shares__c, 
                          Stocks2_Amount__c,RetFund_Vested_Amount__c, Subtotal_Liquid_Assets__c, Total_Assets__c, Cash_Deposit_Desc__c, 
                          Cash_Deposit_Amount__c"
                  recordUpdated="{!c.recordUpdate}"
                      />
   
    <lightning:recordViewForm recordId="{!v.recordId}" objectApiName='Opportunity'>
 <div class="slds-grid slds-gutters slds-wrap">
        
  
    	<div class="slds-col slds-size_1-of-1">  
        
  
    	<div class="slds-section slds-is-open">
  
    			<table class="slds-table slds-table_bordered slds-table-striped slds-wrap">
                    <thead>
                        <tr class="slds-text-title_caps slds-wrap">
                            <th scope="col">
                                <div class="slds-truncate slds-wrap" title="Label">Income</div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate slds-text-align--right slds-wrap" title="Borrower">Borrower</div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate slds-text-align--right slds-wrap" title="CoBorrwer">CoBorrower</div>
                            </th>
                        </tr>
                    </thead> 
                    <tbody>
                        
                        <tr>
                            <th scope="row" data-label="Label">
                                <div class="slds-truncate bold-total" title="Label Total Monthly Income">Total Income</div>
                            </th>
                            <td data-label="Borrower">
                                <div class="slds-truncate slds-text-align--right bold-total" title="Total Income Borrower"> <lightning:outputField fieldName="Inc_Borrower_Total__c" variant="label-hidden"/> </div>
                            </td>
                            <td data-label="CoBorrower">
                                <div class="slds-truncate slds-text-align--right bold-total" title="Total Income CoBorrower"> <lightning:outputField fieldName="Inc_CoBorrower_Total__c" variant="label-hidden"/> </div>
                            </td>
                        </tr>
                        <tr>
                            <td><div class="slds-truncate" title="Label Subj Prop Income Total">Subject Property Net Cash Flow</div></td>
                                                    <td colspan = "2" data-label="Total">
                                <div class="slds-truncate slds-text-align--right" title="Subj Prop Income Total"> <lightning:outputField fieldName="Income_Subject_Property_Net__c" variant="label-hidden"/> </div>
                            </td>
                        </tr>
                        <tr>
                            <td><div class="slds-truncate bold-total" title="Label Total Monthly Income">Total Monthly Income</div></td>
                                                    <td colspan = "2" data-label="Total">
                                <div class="slds-truncate slds-text-align--right bold-total" title="Total Income Total"> <lightning:outputField fieldName="Inc_Grand_Total__c" variant="label-hidden"/> </div>
                            </td>
                        </tr>
                    </tbody>
                </table>

        </div>
        
       <!-- Total Assets Section -->
                       <div class="slds-section slds-is-open">
                

 
           
            <div aria-hidden="false" class="slds-section__content" id="expando-unique-id">
                
                
                <table class="slds-table slds-table_bordered slds-table-striped slds-wrap">
                    <thead>
                    	 <tr  class="slds-text-title_caps slds-wrap"> 
                             <th scope="col">
                                <div class="slds-truncate slds-wrap" title="Label">Assets</div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       <tr>
                            <th scope="row" >
                                <div class="slds-truncate" title="Total Liquid">Subtotal Liquid Assets </div>
                            </th> 
                            
                            <td data-label="Amount">
                                <div class="slds-truncate slds-text-align--right" title="Amount Liquid"><lightning:outputField fieldName="Subtotal_Liquid_Assets__c" variant="label-hidden"/></div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" data-label="Name">
                                <div class="slds-truncate bold-total" title="Total Assets">Total Assets </div>
                            </th> 
                            <td data-label="Amount">
                                <div class="slds-truncate slds-text-align--right bold-total" title="Amount Total"><lightning:outputField fieldName="Total_Assets__c" variant="label-hidden"/></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                
            </div>
            
          
          
      </div> 
            


  
        <!-- Liabilities -->
            <div class="slds-section slds-is-open">

                
                    
                    <table class="slds-table slds-table_bordered slds-table-striped slds-wrap">
                        <thead>             
                            <tr class="slds-text-title_caps">
                                <th scope="row" data-label="Label">
                                    <div class="slds-truncate" title="Label Payments">Liabilities</div>
                                </th>
                                <th scope="row" data-label="Amount">
                                    <div class="slds-truncate slds-text-align--right" title="Label Amount">Amount</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row" data-label="Label">
                                    <div class="slds-truncate" title="Label Primary Housing">Primary Housing Expense</div>
                                </th>
                                <td data-label="Amount">
                                    <div class="slds-truncate slds-text-align--right" title="Primary Housing Exp"> <lightning:outputField fieldName="Exp_Primary_Housing_Total__c" variant="label-hidden"/> </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row" data-label="Label">
                                    <div class="slds-truncate" title="Label Subj Prop">Subject Property Negative Net Cash Flow</div>
                                </th>
                                <td data-label="Amount">
                                    <div class="slds-truncate slds-text-align--right" title="Subj Prop Exp"> <lightning:outputField fieldName="Exp_Subject_Prop_Net_Neg__c" variant="label-hidden"/> </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row" data-label="Label">
                                    <div class="slds-truncate" title="Label Other Prop">All Other Properties</div>
                                </th>
                                <td data-label="Amount">
                                    <div class="slds-truncate slds-text-align--right" title="Other Prop Exp"> <lightning:outputField fieldName="Exp_All_Oth_Prop__c" variant="label-hidden"/> </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row" data-label="Label">
                                    <div class="slds-truncate" title="Label All Other">All Other Payments</div>
                                </th>
                                <td data-label="Amount">
                                    <div class="slds-truncate slds-text-align--right" title="All Other Exp"> <lightning:outputField fieldName="Exp_All_Other_Payments__c" variant="label-hidden"/> </div>
                                </td>
                            </tr>
                            
                            <tr>
                                <th scope="row" data-label="Label">
                                    <div class="slds-truncate bold-total" title="Label Total Liabilities">Total Monthly Liabilities</div>
                                </th>
                                <td data-label="Amount">
                                    <div class="slds-truncate slds-text-align--right bold-total" title="Total Liabilities"> <lightning:outputField fieldName="Total_Liabilities__c" variant="label-hidden"/> </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    
               
            </div>
     </div>
        </div>
       
              
        
     </lightning:recordViewForm>           
</aura:component>