<aura:component controller="solidifyGoogleMaps" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="Lead" type="Object" />
    <aura:attribute name="recordError" type="String" />
    <aura:attribute name="location" type="string" default=""/>
	<aura:attribute name="predictions" type="List" default="[]"/>
    <force:recordData aura:id="leadRecord"
                  mode="EDIT"
                  recordId="{!v.recordId}"
                  targetFields="{!v.Lead}"
                  targetError="{!v.recordError}"
                  fields="Id,Name,Subject_Property_Type__c,Number_of_Units__c,Subject_Property_Street__c,Subject_Property_City__c,Subject_Property_State__c,Subject_Property_Zip__c, 
                          Subject_Property_County__c,Estimated_Value__c,Remarks__c"
                  recordUpdated="{!c.recordUpdate}"
                      />
    
    
     
    <lightning:recordEditForm aura:id="leadPropertyForm" recordId="{!v.recordId}" objectApiName="Lead" >
        <lightning:messages />
		<aura:if isTrue="{!not(empty(v.recordError))}">
        	<div class="recordError">
            	{!v.recordError}</div>
    	</aura:if>
            
             
       
         <div class="slds-grid slds-gutters">
            <div class="slds-col  slds-size_1-of-2">
                <div class="slds-section slds-is-open">
  				<h3 class="slds-section__title slds-theme_shade">
    				<span class="slds-truncate slds-p-horizontal_small" title="Property"><b>Property</b></span>
  				</h3>
                <div class="slds-p-left_small">
                    
                   <lightning:input label="Address Search" 
                        name="location"
                        aura:id="location" 
                        value="{!v.location}"
                        onchange="{!c.getAddress}" />
                   
                   <aura:if isTrue="{!v.predictions.length > 0}">		 
 						<ul class="city_predictions">
						<aura:iteration items="{!v.predictions}" var="prediction">
							<li class="slds-listbox__item">
								<a onclick="{!c.getAddressDetails}" data-placeid="{!prediction.place_id}">{!prediction.description}</a>
							</li>
						</aura:iteration>
						</ul> 	 
					</aura:if>
                 
                    <label for="Street" class="slds-form-element__label">Street</label> 
                <lightning:inputField aura:id="Street" variant="label-hidden" fieldName="Subject_Property_Street__c"  onchange="{!c.handleSaveRecord}"/>
        		<div class="slds-grid slds-gutters">
            		<div class="slds-col  slds-size_1-of-2">
                    <label for="City" class="slds-form-element__label">City</label>
                    <lightning:inputField aura:id="City"  variant="label-hidden" fieldName="Subject_Property_City__c"  onchange="{!c.handleSaveRecord}"/>
                    </div>
                   <div class="slds-col  slds-size_2-of-12">
                <label for="State" class="slds-form-element__label">State</label>
                       <lightning:inputField aura:id="State"  variant="label-hidden" fieldName="Subject_Property_State__c"  onchange="{!c.handleSaveRecord}"/> </div>
                    <div class="slds-col  slds-size_4-of-12">
                        <label for="Zip" class="slds-form-element__label">Zip/Postal Code</label>
                        <lightning:inputField aura:id="Zip"  variant="label-hidden" fieldName="Subject_Property_Zip__c"  onchange="{!c.handleSaveRecord}"/> </div>
                    </div>
                <lightning:inputField fieldName="Subject_Property_County__c"  onchange="{!c.handleSaveRecord}"/>
                    
                    
            </div>

                </div>
             </div>
            <div class="slds-col slds-size_1-of-2">
                <div class="slds-section slds-is-open">
  				<h3 class="slds-section__title slds-theme_shade">
                    <span class="slds-truncate slds-p-horizontal_small" title="Details"><b>Details</b></span>
  				</h3>
<div class="slds-p-left_small">
                <lightning:inputField fieldName="Subject_Property_Type__c"  onchange="{!c.handleSaveRecord}"/>
                <lightning:inputField fieldName="Number_of_Units__c"  onchange="{!c.handleSaveRecord}"/>

    			<lightning:inputField fieldName="Estimated_Value__c"  onchange="{!c.handleSaveRecord}"/>
		        <lightning:inputField fieldName="Remarks__c"  onchange="{!c.handleSaveRecord}"/> 
                    </div>
            	</div>
            </div>
            
        </div>
       
        
    </lightning:recordEditForm>

</aura:component>