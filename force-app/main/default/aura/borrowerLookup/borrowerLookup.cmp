<aura:component controller="customLookUpController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">

    <aura:attribute name="selectedBorrower" type="sObject" default="{}" />
    <aura:attribute name="borrowerName" type="String"/>
    <aura:attribute name="listOfBorrowerRecords" type="List" />
    <aura:attribute name="borrowerSearchKeyWord" type="string"/>
    <aura:attribute name="label" type="string" default=""/>
    <aura:attribute name="Message" type="String" default=""/>   
    <aura:attribute name="showLoanInput" type="Boolean" />
    <aura:attribute name="showDetails" type="Boolean"/>
    <aura:attribute name="borrowerSearch" type="Boolean"/>
    <aura:attribute name="contactId" type="String"/>
    <aura:attribute name="leadId" type="String"/>
    <aura:attribute name="noLoans" type="Boolean"/>
    <aura:attribute name="IconName" type="String" default="standard:contact"/>
    <aura:attribute name="listOfLoanRecords" type="List"/>
     
    <aura:handler name="oSelectedRecordEvent" event="c:selectedsObjectRecordEvent" action="{!c.handleComponentEvent}"/>
   

    <div onmouseleave="{!c.onblur}" aura:id="searchRes" class="slds-form-element slds-p-left_small slds-lookup slds-is-close" data-select="single">
        <label class="slds-form-element__label" for="lookup-348">Search Borrower</label>

        <div class="slds-form-element__control">            
            <div class="slds-input-has-icon slds-input-has-icon--right">

                <div aura:id="lookup-pill" class="slds-pill-container slds-hide">
                     <lightning:pill class="pillSize" label="{!v.selectedBorrower.Name}" name="{!v.selectedBorrower.Name}" onremove="{! c.clear }">
                          <aura:set attribute="media">
                             <lightning:icon iconName="{!v.IconName}" size="x-small" alternativeText="{!v.IconName}"/>
                          </aura:set>
                      </lightning:pill>
                </div>
                <div aura:id="lookupField" class="slds-show">
                    <lightning:icon class="slds-input__icon slds-show" iconName="utility:search" size="x-small" alternativeText="search"/>
                    <span class="slds-icon_container  slds-combobox__input-entity-icon" title="record">
                        <lightning:icon class="slds-icon slds-icon slds-icon_small slds-icon-text-default" iconName="{!v.IconName}" size="x-small" alternativeText="icon"/>
                        <span class="slds-assistive-text"></span>
                    </span>
                    <ui:inputText click="{!c.onfocus}" updateOn="keyup" keyup="{!c.keyPressController}" 
                                  class="slds-lookup__search-input slds-input leftPaddingClass" value="{!v.borrowerSearchKeyWord}" 
                                  placeholder="Search for Lead or Contact"/>
                 
            </div>
        </div>
        </div>
        <ul style="min-height:40px;margin-top:0px !important" class="slds-listbox slds-listbox_vertical slds-dropdown slds-dropdown_fluid slds-lookup__menu slds" role="listbox">
            <lightning:spinner class="slds-hide" variant="brand" size="small" aura:id="mySpinner"/>
            <center> {!v.Message}</center>
            <aura:iteration items="{!v.listOfBorrowerRecords}" var="singleRec">
                <c:lookupSearch oRecord="{!singleRec}" IconName="{!v.IconName}"/>
            </aura:iteration>
        </ul>
    </div>
</aura:component>