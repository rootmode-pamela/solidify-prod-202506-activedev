<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="Lead" type="Object" />
    <aura:attribute name="recordError" type="String" />
    <aura:attribute name="showSpinner" type="Boolean" default="true" />
    <aura:attribute name="dirtyFields" type="List"/>
    
    <aura:if isTrue="{!v.showSpinner}">
        <lightning:spinner />
    </aura:if>
    
    <lightning:recordEditForm aura:id="leadLoanScenarioForm" recordId="{!v.recordId}" objectApiName="Lead" density="compact"
                              onload="{!c.handleLoad}"
                              onsuccess="{!c.handleSuccess}"
                              
                              >
        <lightning:messages />
        <aura:if isTrue="{!not(empty(v.recordError))}">
            <div class="recordError">
                {!v.recordError}</div>
        </aura:if>
        
        <lightning:card>
            <div class="slds-grid slds-size_1-of-1">
                <div class="slds-col slds-box slds-m-right_xx-small slds-size_1-of-5">
                    <h1 class="title" >CURRENT LOAN</h1>
                    <div class="slds-grid slds-size_1-of-1">
                        <div class="slds-col slds-size_1-of-1">
                            <lightning:inputField class="slds-size_1-of-1" aura:id="occupancy" fieldName="Occupancy__c" onchange="{!c.highlightChangedField}" variant="label-stacked" />
                            <lightning:inputField class="slds-size_1-of-1" aura:id="propery" fieldName="Subject_Property_Type__c" onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                            <lightning:inputField class="slds-size_1-of-1" aura:id="units" fieldName="Number_of_Units__c" onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                            <lightning:inputField class="slds-size_1-of-1" aura:id="value" fieldName="Estimated_Value__c" onchange="{!c.highlightChangedField}" variant="label-stacked" />
                            <lightning:inputField class="slds-size_1-of-1" aura:id="program" fieldName="Current_Program__c"  onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                            <lightning:inputField class="slds-size_1-of-1" aura:id="balance" fieldName="Current_Balance__c" onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                            <lightning:inputField class="slds-size_1-of-1" aura:id="rate" fieldName="Current_Rate__c" onchange="{!c.highlightChangedField}" variant="label-stacked" />
                            <lightning:inputField class="slds-size_1-of-1" aura:id="payment" fieldName="Current_Payment__c"  onchange="{!c.highlightChangedField}" variant="label-stacked"/>
                            <div>
                                <lightning:button disabled="true" aura:id="submitButton" class="slds-m-top_small" type="submit" label="Submit" />
                            </div>
                            <lightning:outputField class="slds-size_1-of-1" fieldName="Years_Remaining_on_Current_Loan__c" variant="label-stacked"/>
                            <lightning:outputField class="slds-size_1-of-1" fieldName="Total_Interest_Remaining_on_Current_Loan__c" variant="label-stacked"/>
                        </div>
                    </div>
                    
                </div>
                
                
                
                <div class="slds-col slds-box slds-size_4-of-5 slds-m-right_xx-small">
