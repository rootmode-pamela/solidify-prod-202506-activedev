                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Labels">&nbsp;</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Scenario1">Scenario 1</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Scenario2">Scenario 2</div>
                                </th>
                                <th class="" scope="col">
                                    <div class="slds-truncate" title="Scenario3">Scenario 3</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th data-label="Purpose" scope="row">
