                                <td data-label="S1-TermDue">
                                    <div class="slds-truncate" title="S1-TermDue">
                                        <lightning:inputField fieldName="Term_Due__c" aura:id="term1" onchange="{!c.highlightChangedField}" variant="label-hidden"/></div>
                                </td>
                                <td data-label="S2-TermDue">
                                    <div class="slds-truncate" title="S2-TermDue">
                                        <lightning:inputField fieldName="Term_Due_Scenario_2__c" aura:id="term2" onchange="{!c.highlightChangedField}" variant="label-hidden" /></div>
                                </td>
                                <td data-label="S3-TermDue">
                                    <div class="slds-truncate" title="S3-TermDue">
                                        <lightning:inputField fieldName="Term_Due_Scenario_3__c" aura:id="term3" onchange="{!c.highlightChangedField}" variant="label-hidden" /></div>
                                </td>
                            </tr>
                            <tr>
                                <th data-label="LoanAmt" scope="row">
                                    Loan Amt:
                                </th>
                                <td data-label="S1-LoanAmt">
                                    <div class="slds-truncate" title="S1-LoanAmt">
                                        <lightning:inputField fieldName="First_Loan_Amount_Scenario_1__c" aura:id="amt1" onchange="{!c.highlightChangedField}" variant="label-hidden"/></div>
                                </td>
                                <td data-label="S2-LoanAmt">
                                    <div class="slds-truncate" title="S2-LoanAmt">
                                        <lightning:inputField fieldName="First_Loan_Amount_Scenario_2__c" aura:id="amt2"  onchange="{!c.highlightChangedField}" variant="label-hidden" /></div>
                                </td>
                                <td data-label="S3-LoanAmt">
                                    <div class="slds-truncate" title="S3-LoanAmt">
                                        <lightning:inputField fieldName="First_Loan_Amount_Scenario_3__c" aura:id="amt3"  onchange="{!c.highlightChangedField}" variant="label-hidden" /></div>
