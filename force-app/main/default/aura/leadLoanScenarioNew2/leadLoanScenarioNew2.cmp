                                    <div class="slds-truncate" title="S1-CLTV">
                                        <lightning:outputField fieldName="CLTV_Scenario_1__c" variant="label-hidden"/></div>
                                </td>
                                <td data-label="S2-CLTV">
                                    <div class="slds-truncate" title="S2-CLTV">
                                        <lightning:outputField fieldName="CLTV_Scenario_2__c" variant="label-hidden" /></div>
