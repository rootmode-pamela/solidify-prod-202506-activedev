                                <td data-label="S1-InterestSavings">
                                    <div class="slds-truncate" title="S1-InterestSavings">
                                        <lightning:outputField fieldName="Daily_Interest_Savings__c" variant="label-hidden"/></div>
                                </td>
                                <td data-label="S2-InterestSavings">
                                    <div class="slds-truncate" title="S2-InterestSavings">
                                        <lightning:outputField fieldName="Daily_Interest_Savings_Scenario_2__c" variant="label-hidden" /></div>
                                </td>
                                <td data-label="S3-InterestSavings">
                                    <div class="slds-truncate" title="S3-InterestSavings">
                                        <lightning:outputField fieldName="Daily_Interest_Savings_Scenario_3__c" variant="label-hidden" /></div>
                                </td>
                            </tr>
                            <tr>
                                <th data-label="OnPacePayment" scope="row">
                                    On Pace Payment:
