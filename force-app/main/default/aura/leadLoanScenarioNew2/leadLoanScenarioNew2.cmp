                                <td data-label="S1-Purpose">
                                    <div title="S1-Purpose">
                                        <lightning:inputField fieldName="Purpose__c" aura:id="purpose1" onchange="{!c.highlightChangedField}" variant="label-hidden"/></div>
                                </td>
                                <td data-label="S2-Purpose">
                                    <div title="S2-Purpose">
                                        <lightning:inputField fieldName="Purpose_Scenario_2__c" aura:id="purpose2" onchange="{!c.highlightChangedField}" variant="label-hidden" /></div>
                                </td>
                                <td data-label="S3-Purpose">
                                    <div title="S3-Purpose">
                                        <lightning:inputField fieldName="Purpose_Scenario_3__c" aura:id="purpose3" onchange="{!c.highlightChangedField}" variant="label-hidden" /></div>
                                </td>
                            </tr>
                            <tr>
                                <th data-label="Loan Program" scope="row">
