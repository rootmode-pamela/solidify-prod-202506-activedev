                                    <div title="S1-Program">
                                        <lightning:inputField fieldName="Loan_Program__c" aura:id="program1" onchange="{!c.highlightChangedField}" variant="label-hidden"/></div>
                                </td>
                                <td data-label="S2-Program">
                                    <div title="S2-Program">
                                        <lightning:inputField fieldName="Loan_Program_Scenario_2__c" aura:id="program2" onchange="{!c.highlightChangedField}" variant="label-hidden" /></div>
