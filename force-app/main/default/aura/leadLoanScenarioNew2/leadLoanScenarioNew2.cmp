                                <td data-label="S1-PaymentSavings">
                                    <div class="slds-truncate" title="S1-PaymentSavings">
                                        <lightning:outputField fieldName="Monthly_Payment_Savings__c" variant="label-hidden"/></div>
                                </td>
                                <td data-label="S2-PaymentSavings">
                                    <div class="slds-truncate" title="S2-PaymentSavings">
