                                        <lightning:inputField fieldName="Rate_Scenario_3__c" aura:id="rate3" onchange="{!c.highlightChangedField}" variant="label-hidden" /></div>
                                </td>
                            </tr>  
                            <tr>
                                <th data-label="LTV" scope="row">
                                    LTV:
                                </th>
                                <td data-label="S1-LTV">
                                    <div class="slds-truncate" title="S1-LTV">
                                        <lightning:outputField fieldName="LTV_Scenario_1__c" variant="label-hidden"/></div>
                                </td>
                                <td data-label="S2-LTV">
                                    <div class="slds-truncate" title="S2-LTV">
                                        <lightning:outputField fieldName="LTV_Scenario_2__c" variant="label-hidden" /></div>
                                </td>
                                <td data-label="S3-LTV">
