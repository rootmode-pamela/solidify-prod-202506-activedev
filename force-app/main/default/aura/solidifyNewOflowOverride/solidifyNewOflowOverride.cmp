<aura:component implements="lightning:actionOverride,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name="newCase" type = "Case"/>
    <aura:attribute name="statusPickValues" type= "Object"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <div class="slds-card__body_inner">
    <force:recordData aura:id="newCaseForm"
                          recordId = "{!v.recordId}"
                          targetFields = "{!v.newCase}"
                          fields="Status"
                          mode="EDIT"
                          />

        <lightning:messages />
        <lightning:navigation aura:id="nav"/>
        <div aura:id="editDialog" role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
           	<div class="slds-modal__header">
            	<h2 class="slds-text-heading--medium">New OFlow</h2>
            </div>
                <div class="slds-modal__content slds-p-around--medium slds-grid slds-wrap">
        			<lightning:input aura:id="status" name="FirstName" label="First Name" class="slds-size--1-of-2 slds-p-horizontal_x-small" />
                    <lightning:input aura:id="lName" name="LastName" label="Last Name" class="slds-size--1-of-2 slds-p-horizontal_x-small" />
					<lightning:input aura:id="coLName" name="Co_Borrower_LastName__c" label="CoBorrower Last Name" class="slds-size--1-of-2 slds-p-horizontal_x-small" />
					<lightning:input aura:id="coFName" name="Bo_Borrower_FirstName" label="CoBorrower First Name" class="slds-size--1-of-2 slds-p-horizontal_x-small" />
                    
                    <c:solidifyPicklistValues sObjectName="Case" fieldName="Status" picklistValues="{!v.statusPickValues}" />
            
                    <lightning:select aura:id="caseStatus" name="caseStatus" label="Status">
                    	<aura:iteration items="{!v.statusPickValues}" var="item"> 
        					<aura:if isTrue="{!v.newCase.Status__c == item }"> 
            					<option value="{!item}" selected="selected">{!item}</option> 
            				<aura:set attribute="else"> 
                				<option value="{!item}">{!item}</option> 
            				</aura:set> 
        					</aura:if> 
    					</aura:iteration> 
                    
                    </lightning:select>
			
            
            </div>

           
                  <div class="slds-modal__footer">      
  				<lightning:button variant="neutral" label="Cancel" onclick="{!c.handleCancel}"/>
                <lightning:button variant="brand" label="Submit" onclick="{!c.handleSubmit}" />
        </div>
                        </div>
                    </div> 
            <div aura:id="overlay" class="slds-backdrop slds-backdrop--open"></div>
    </div>
</aura:component>