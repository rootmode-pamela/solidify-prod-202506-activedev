<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
	<aura:attribute name="editMode" type="Boolean" default="false" />
    <aura:attribute name="sourceRecord" type="Object" />
    <aura:attribute name="sourceRecordFields" type="Object" />
    <aura:attribute name="error" type="String" />
     
    <lightning:recordEditForm recordId="{!v.recordId}" objectApiName="Opportunity" recordtypeid="012f4000000HmNxAAK">
        <lightning:messages />
        <lightning:inputField fieldName="Name" />
        <lightning:inputField fieldName="Point_Comments__c" />
        <lightning:inputField fieldName="Point_Filename__c" />
        <lightning:inputField fieldName="Point_Folder__c" />
        <lightning:inputField fieldName="Point_Status__c" />
        
        <lightning:button class="slds-m-top_small" variant="brand" type="submit" name="update" label="Update" />
    </lightning:recordEditForm>
        
	<aura:if isTrue="{!equals(v.recordtypeid, '012f4000000HmO2AAK')}">
    <lightning:recordEditForm recordId="{!v.recordId}" objectApiName="Opportunity" recordtypeId="012f4000000HmO2AAK">
        <lightning:messages />
        <lightning:outputField fieldName="Name" />
        <lightning:outputField fieldName="Point_Comments__c" />
        <lightning:outputField fieldName="Point_Filename__c" />
        <lightning:outputField fieldName="Point_Folder__c" />
        <lightning:outputField fieldName="Point_Status__c" />
        
        <lightning:button class="slds-m-top_small" variant="brand" type="submit" name="update" label="Update" />
    </lightning:recordEditForm>
    </aura:if>
    
    
</aura:component>