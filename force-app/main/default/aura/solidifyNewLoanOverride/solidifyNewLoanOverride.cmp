<aura:component implements="force:appHostable,lightning:actionOverride,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global">

    
    <div class="slds-card__body_inner">

	  <lightning:quickActionAPI aura:id="quickActionAPI" />
        <lightning:messages />
        <lightning:navigation aura:id="nav"/>
        <div aura:id="editDialog" role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            
           	<div class="slds-modal__header">
            	<h2 class="slds-text-heading--medium">Use Global Action to Create Loans</h2>
            </div>
                <div class="slds-modal__content slds-p-around--medium slds-grid slds-wrap">
                    Loans should be created throught the global action button in the upper right corner (<lightning:icon iconName = 'utility:add' variant='inverse' size ='x-small' class='slds-global-header__button--icon-actions'/>)
            </div>                    

                        <div class="slds-modal__footer">      
  				<lightning:button variant="neutral" label="Cancel" onclick="{!c.handleCancel}"/>

    		</div>
            </div>

        </div>
    </div>

</aura:component>