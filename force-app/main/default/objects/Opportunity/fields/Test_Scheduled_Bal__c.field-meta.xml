<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Test_Scheduled_Bal__c</fullName>
    <formula>Amount+((Amount- Payment_Amount__c *12/ Interest_Rate__c )*EXP((

IF(ISBLANK(First_Payment__c), 
(YEAR(TODAY())-YEAR(CloseDate))*12+MONTH(TODAY())-MONTH(CloseDate)+1,
(YEAR(TODAY())-YEAR(First_Payment__c))*12+MONTH(TODAY())-MONTH(First_Payment__c)+1)

)*LN(1+Interest_Rate__c/12))+Payment_Amount__c*12/Interest_Rate__c )-((Amount-Payment_Amount__c*12/Interest_Rate__c )*EXP((1-1)*LN(1+Interest_Rate__c/12))+Payment_Amount__c*12/Interest_Rate__c )</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Test-Scheduled Bal</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <type>Currency</type>
</CustomField>
