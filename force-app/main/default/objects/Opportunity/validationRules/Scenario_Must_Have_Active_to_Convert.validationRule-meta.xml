<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Scenario_Must_Have_Active_to_Convert</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
RecordType.Name = &apos;Scenario&apos;,
IsPickVal(StageName, &apos;Converted&apos;),
IsBlank( Active_Loan__c )
)</errorConditionFormula>
    <errorDisplayField>Active_Loan__c</errorDisplayField>
    <errorMessage>Please enter the Active Loan before converting this Scenario</errorMessage>
</ValidationRule>
